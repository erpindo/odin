<odoo>
<data>

  <!-- kecamatan list view -->
  <record id="odin_subdistrict_view_tree" model="ir.ui.view">
    <field name="name">res.subdistrict.tree</field>
    <field name="model">res.subdistrict</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
      <tree string="Kecamatan">
        <field name="name"/>
        <field name="description"/>
        <field name="city_id"/>
      </tree>
    </field>
  </record>

  <!-- layanan form view -->
  <record id="odin_subdistrict_view_form" model="ir.ui.view">
    <field name="name">res.subdistrict.form</field>
    <field name="model">res.subdistrict</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form string="Kecamatan">
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="city_id"/>
            </group>
            <group>
              <field name="description"/>
            </group>
          </group>
          <notebook>
            <page string="Daftar Kelurahan" name="village_list">
              <field name="village_ids">
                <tree editable="bottom">
                  <field name="name" string="Kelurahan" options="{'no_create': True, 'no_open': True}"/>
                  <field name="zipcode" string="Kodepos" options="{'no_create': True, 'no_open': True}"/>
                  <field name="description" string="Deskripsi" options="{'no_create': True, 'no_open': True}"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
        <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <!-- kecamatan action -->
  <record model="ir.actions.act_window" id="odin_subdistrict_action_window">
    <field name="name">Kecamatan</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">res.subdistrict</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- contacts menu -->
  <menuitem
    id="menu_partner_odin_subdistrict"
    action="odin_subdistrict_action_window"
    parent="contacts.menu_localisation"
    sequence="5"
    groups="base.group_partner_manager"/>


</data>
</odoo>
