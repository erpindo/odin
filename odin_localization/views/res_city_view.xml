<odoo>
<data>

  <!-- kota list view -->
  <record id="odin_city_view_tree" model="ir.ui.view">
    <field name="name">res.city.tree</field>
    <field name="model">res.city</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
      <tree string="Kota">
        <field name="name"/>
        <field name="state_id"/>
        <field name="description"/>
      </tree>
    </field>
  </record>

  <!-- layanan form view -->
  <record id="odin_city_view_form" model="ir.ui.view">
    <field name="name">res.city.form</field>
    <field name="model">res.city</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form string="Kota">
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="state_id"/>
            </group>
            <group>
              <field name="description"/>
            </group>
          </group>
          <notebook>
            <page string="Daftar Kecamatan" name="subdistrict_list">
              <field name="subdistrict_ids">
                <tree editable="bottom">
                  <field name="name" string="Kecamatan"/>
                  <field name="description" string="Deskripsi"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
        <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <!-- kota action -->
  <record model="ir.actions.act_window" id="odin_city_action_window">
    <field name="name">Kota</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">res.city</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- contacts menu -->
  <menuitem
    id="menu_partner_odin_city"
    action="odin_city_action_window"
    parent="contacts.menu_localisation"
    sequence="4"
    groups="base.group_partner_manager"/>


</data>
</odoo>
