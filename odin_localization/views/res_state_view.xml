<odoo>
<data>

  <!-- Provinsi list view -->
  <record id="odin_state_view_tree" model="ir.ui.view">
    <!-- <field name="name">res.odin.state.tree</field> -->
    <field name="model">res.country.state</field>
    <field name="inherit_id" ref="base.view_country_state_tree"/>
    <field name="type">tree</field>
    <field name="arch" type="xml">
      <xpath expr="//tree" position="attributes">
          <attribute name="editable"/>
      </xpath>
      <xpath expr="//field[@name='country_id']" position="before">
        <field name="description"/>
      </xpath>
    </field>
  </record>

  <!-- Provinsi form view -->
  <record id="odin_state_view_form" model="ir.ui.view">
    <!-- <field name="name">res.odin.state.form</field> -->
    <field name="model">res.country.state</field>
    <field name="inherit_id" ref="base.view_country_state_form"/>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <xpath expr="//form" position="replace">
        <form position="inside">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="country_id"/>
              </group>
              <group>
                <field name="code"/>
                <field name="description"/>
              </group>
            </group>
            <notebook>
              <page string="Daftar Kota" name="city_list">
                <field name="city_ids">
                  <tree editable="bottom">
                    <field name="name" string="Kota"/>
                    <field name="description" string="Deskripsi"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </xpath>
    </field>
  </record>

</data>
</odoo>
