<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>

		<record id="view_reexport_efaktur" model="ir.ui.view">
			<field name="name">view.reexport.efaktur</field>
			<field name="model">reexport.efaktur</field>
			<field name="arch" type="xml">
				<form string="e-Faktur" version="7">
					<field invisible="1" name="state_x"/>
					Choose Delimiter:
					<field name="delimiter"/>
					<newline/>
					<group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
						<separator colspan="4" string="Generate to Excel done. Download by click link below" attrs="{'invisible':[('state_x','=','choose')]}"/>
						<field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
						<field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
					</group>
					<group>
						<field name="npwp_o" string="SET NPWP 000000000000000"/>
					</group>
					<footer>
						<button icon="fa-print" string='Reexport' name="reexport_efaktur" type="object" attrs="{'invisible':[('state_x','=','get')]}"/>
						<button string="Cancel" class="btn-default" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="action_reexport_efaktur" model="ir.actions.act_window">
				<field name="name">Download e-Faktur</field>
				<field name="type">ir.actions.act_window</field>
				<field name="res_model">reexport.efaktur</field>
				<field name="view_mode">form</field>
				<field name="view_id" ref="view_reexport_efaktur"/>
				<field name="context">{}</field>
				<field name="target">new</field>
				<field name="help">	Choose Delimiter:</field>
				<field name="binding_model_id" ref="efaktur.model_efaktur"/>
				<field name="binding_view_types">list</field>
		</record>
	</data>
</odoo>
